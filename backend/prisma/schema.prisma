generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  username            String @unique 
  password            String 
  email               String @unique 
  userId              Int    @unique @default(autoincrement())  
  profilePicture      String?
  content             content[]  
  tags                tag[]  
  link                link?
}

model content {
  contentId  Int  @unique @default(autoincrement())  
  type    TYPE
  title   String 
  link    String 
  userId  Int 
  user    User @relation(fields: [userId],references: [userId])  
}

model tag{
  tagid   Int @unique @default(autoincrement()) 
  tags    String 
  userId  Int 
  user    User  @relation(fields: [userId],references: [userId])
}
model link{
  hash    String  
  userId  Int  @unique
  user    User @relation(fields: [userId],references: [userId])
}

enum TYPE{
YOUTUBE
TWITTER 
NOTE
}